<div class="modal fade" id="manageTeam" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Manage Team of @ViewBag.Project.Name</h4>
            </div>
            <div class="modal-body" style="min-height: 220px;">
                <div class="col-md-5">
                    <b>Users:</b>
                    @Html.ListBox("Users", (IEnumerable<SelectListItem>)ViewBag.Project.AllUsers, new { @class="members"})
                </div>
                <div class="col-md-2">
                    <br />
                    <input id="btnAdd" value="Add" class="btn btn-default btn-addremove" /><br /><br />
                    <input id="btnRemove" value="Remove" class="btn btn-default btn-addremove" />
                </div>
                <div class="col-md-3">
                    <b>Team:</b>
                    @Html.ListBox("ProjectTeam", (IEnumerable<SelectListItem>)ViewBag.Project.ProjectTeam, new { @class = "members" })
                </div>
            </div>
            <div class="modal-footer">
                <p>Note: The team is not saved until the Project is saved!</p>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


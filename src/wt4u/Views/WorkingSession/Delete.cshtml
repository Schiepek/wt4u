@model wt4u.Models.WorkingSession

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>WorkingSession @Html.ValueFor(model => model.WorkingSessionId)</h4>
    @if (@ViewBag.DeleteMessage.Count != 0)
    {
        <p class="alert alert-danger">
            <b>If you delete this WorkingSession, the following Objects will also be deleted</b><br />
            @foreach (String delMessage in @ViewBag.DeleteMessage)
            {
                @delMessage<br/>
            }
        </p>
    }

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.Name) (@Html.DisplayFor(model => model.Employee.UserName))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Start)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.End)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
